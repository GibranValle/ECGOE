<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Fondo1"
    android:id="@+id/principal"
    tools:context="app.biouno.upibi.ecgoe.Control">

    <!--Grafico -->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="2"
        android:background="@color/subfondo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="570dp"
            android:layout_height="185dp"
            android:id="@+id/Grafica"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!--Telemetria y cocoro-->
    <LinearLayout
        android:layout_margin="15dp"
        android:background="@color/botones"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="3"
            style="@style/textoPaciente"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Paciente"
            android:id="@+id/IDpaciente" />

        <!--BPM-->
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"
            style="@style/textogrande"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/beats"
            android:id="@+id/saludPaciente" />

        <!--Cocoro-->
        <ImageView
            android:src="@drawable/kokoro"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView" />

        <!--Botones-->
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!--Reset-->
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                style="@style/boton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Refresh"
                android:id="@+id/button" />
            <!--Conexion-->
            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                style="@style/textomediano"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/bt_DC"
                android:background="@color/RED"
                android:id="@+id/estado" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
